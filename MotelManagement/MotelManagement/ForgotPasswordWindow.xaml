<Window x:Class="MotelManagement.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="365" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Forgot Password" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="UserMail:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUserMail" Width="200" VerticalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="New Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtNewPassword" Width="200" VerticalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Confirm Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" Width="200" VerticalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="txtErrorMessage" TextWrapping="Wrap" Foreground="Red" Margin="0,10,0,0"/>
            <Button Content="Reset Password" Width="120" Click="btnResetPassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
