<Window x:Class="MotelManagement.OTPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotelManagement"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="OTPWindow" Height="155" Width="555">
        
    <Grid>
        <Label Content="Enter OTP:" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="OtpTextBox" VerticalAlignment="Top" Margin="92,52,93,0" Width="360"/>
        <Button Content="Submit" VerticalAlignment="Top" Margin="92,94,93,0" Width="360" Click="SubmitButton_Click"/>
    </Grid>
</Window>
